<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:AppystoreLite="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg_trial_subscription"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <com.appy.store.lite.customviews.CustomTextView
            android:id="@+id/tv_dialog_trial_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/trial_success_title"
            android:textColor="@color/purple"
            android:textSize="@dimen/h1"
            AppystoreLite:fontName="@string/font_name_passing_notes" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/otp_dialog_image"
            android:contentDescription="@string/activity_login"/>

        <com.appy.store.lite.customviews.CustomTextView
            android:id="@+id/tv_dialog_trial_status_msg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/trial_success_msg1"
            android:textColor="@color/black"
            android:textSize="@dimen/h3"
            AppystoreLite:fontName="@string/font_name_passing_notes" />

        <com.appy.store.lite.customviews.CustomTextView
            android:id="@+id/tv_dialog_trial_status_msg_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/trial_success_msg2"
            android:textColor="@color/black"
            android:textSize="@dimen/h3"
            AppystoreLite:fontName="@string/font_name_passing_notes" />

        <com.appy.store.lite.customviews.CustomButton
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/btn_dialog_trial_status_action_positive"
            android:background="@drawable/bg_trial_status_button"
            android:text="@string/trial_success_action_positive"
            android:padding="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            AppystoreLite:fontName="@string/font_name_passing_notes"/>

    </LinearLayout>

    <!--Cross Button-->
    <ImageButton
        android:id="@+id/ib_close_trial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@null"
        android:src="@drawable/close_icon_light" />

</RelativeLayout>