<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:AppystoreLite="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    android:padding="@dimen/dp_40">

    <!--Title-->
    <com.appy.store.lite.customviews.CustomTextView
        android:id="@+id/tv_title_singleNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Title For Dummy Notification Testing "
        android:textColor="@android:color/black"
        android:textSize="@dimen/h1"
        AppystoreLite:fontName="@string/font_name_passing_notes" />

    <!--Description-->
    <com.appy.store.lite.customviews.CustomTextView
        android:id="@+id/tv_Desc_singleNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_singleNotif"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="Description Text "
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="@dimen/h1"
        AppystoreLite:fontName="@string/font_name_passing_notes" />

    <ImageView
        android:id="@+id/imgSingleNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Desc_singleNotif"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:contentDescription="@string/activity_login"
        android:scaleType="centerInside"
        android:src="@drawable/otp_dialog_image"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/containerActionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imgNotification"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>


</RelativeLayout>