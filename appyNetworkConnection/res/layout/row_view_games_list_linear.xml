<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:AppystoreLite="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_20"
    android:paddingTop="@dimen/dp_15" >

    <!-- Header Text -->

    <com.appy.store.lite.customviews.CustomTextView
        android:id="@+id/games_list_item_header_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        AppystoreLite:fontName="@string/font_name_passing_notes"
        android:textColor="@android:color/white"
        android:textSize="@dimen/h2"
        android:visibility="visible" />

    <!-- Gamnes Content Items Images -->

    <LinearLayout
        android:id="@+id/lin_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal"
        android:weightSum="10" >

        <!-- Item 1 -->

        <com.appy.store.lite.ripple.RippleDecoratorView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            app:rdv_rippleAnimationDuration="800"
            app:rdv_rippleAnimationTrigger="onDown"
            app:rdv_rippleCentered="true"
            app:rdv_rippleColor="@android:color/holo_blue_dark"
            app:rdv_rippleRadius="60dp"
            app:rdv_rippleStyle="fill"
            app:rdv_zoomAnimation="true"
            app:rdv_zoomAnimationDuration="400"
            app:rdv_zoomAnimationTrigger="onTap" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/games_list_item__RL_1"
                    android:layout_width="@dimen/game_image_back_height"
                    android:layout_height="@dimen/game_image_back_height"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/border_image"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/games_list_item__IV_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/game_image_height"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:id="@+id/locked_overlay_ll_1"
                        android:layout_width="@dimen/game_image_back_height"
                        android:layout_height="@dimen/game_image_back_height"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_3"
                        android:alpha=".50"
                        android:background="@drawable/locked_item_transparent_bg"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@drawable/videos_categories_locked_icon" />

                        <com.appy.store.lite.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            AppystoreLite:fontName="@string/font_name_passing_notes"
                            android:text="@string/locked_txt"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </RelativeLayout>

                <com.appy.store.lite.customviews.CustomTextView
                    android:id="@+id/games_title_TV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    AppystoreLite:fontName="@string/font_name_passing_notes"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/h3" />
            </LinearLayout>
        </com.appy.store.lite.ripple.RippleDecoratorView>

        <!-- Item 2 -->

        <com.appy.store.lite.ripple.RippleDecoratorView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="2.5"
            app:rdv_rippleAnimationDuration="800"
            app:rdv_rippleAnimationTrigger="onDown"
            app:rdv_rippleCentered="true"
            app:rdv_rippleColor="@android:color/holo_blue_dark"
            app:rdv_rippleRadius="60dp"
            app:rdv_rippleStyle="fill"
            app:rdv_zoomAnimation="true"
            app:rdv_zoomAnimationDuration="400"
            app:rdv_zoomAnimationTrigger="onTap" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/games_list_item__RL_2"
                    android:layout_width="@dimen/game_image_back_height"
                    android:layout_height="@dimen/game_image_back_height"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/border_image"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/games_list_item__IV_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/game_image_height"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:id="@+id/locked_overlay_ll_2"
                        android:layout_width="@dimen/game_image_back_height"
                        android:layout_height="@dimen/game_image_back_height"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_3"
                        android:alpha=".50"
                        android:background="@drawable/locked_item_transparent_bg"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@drawable/videos_categories_locked_icon" />

                        <com.appy.store.lite.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_1"
                            AppystoreLite:fontName="@string/font_name_passing_notes"
                            android:text="@string/locked_txt"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </RelativeLayout>

                <com.appy.store.lite.customviews.CustomTextView
                    android:id="@+id/games_title_TV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    AppystoreLite:fontName="@string/font_name_passing_notes"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/h3" />
            </LinearLayout>
        </com.appy.store.lite.ripple.RippleDecoratorView>

        <!-- Item 3 -->

        <com.appy.store.lite.ripple.RippleDecoratorView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="2.5"
            app:rdv_rippleAnimationDuration="800"
            app:rdv_rippleAnimationTrigger="onDown"
            app:rdv_rippleCentered="true"
            app:rdv_rippleColor="@android:color/holo_blue_dark"
            app:rdv_rippleRadius="60dp"
            app:rdv_rippleStyle="fill"
            app:rdv_zoomAnimation="true"
            app:rdv_zoomAnimationDuration="400"
            app:rdv_zoomAnimationTrigger="onTap" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/games_list_item__RL_3"
                    android:layout_width="@dimen/game_image_back_height"
                    android:layout_height="@dimen/game_image_back_height"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/border_image"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/games_list_item__IV_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/game_image_height"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:id="@+id/locked_overlay_ll_3"
                        android:layout_width="@dimen/game_image_back_height"
                        android:layout_height="@dimen/game_image_back_height"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_3"
                        android:alpha=".50"
                        android:background="@drawable/locked_item_transparent_bg"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@drawable/videos_categories_locked_icon" />

                        <com.appy.store.lite.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_1"
                            AppystoreLite:fontName="@string/font_name_passing_notes"
                            android:text="@string/locked_txt"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </RelativeLayout>

                <com.appy.store.lite.customviews.CustomTextView
                    android:id="@+id/games_title_TV3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    AppystoreLite:fontName="@string/font_name_passing_notes"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/h3" />
            </LinearLayout>
        </com.appy.store.lite.ripple.RippleDecoratorView>

        <!-- Item 4 -->

        <com.appy.store.lite.ripple.RippleDecoratorView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="2.5"
            app:rdv_rippleAnimationDuration="800"
            app:rdv_rippleAnimationTrigger="onDown"
            app:rdv_rippleCentered="true"
            app:rdv_rippleColor="@android:color/holo_blue_dark"
            app:rdv_rippleRadius="60dp"
            app:rdv_rippleStyle="fill"
            app:rdv_zoomAnimation="true"
            app:rdv_zoomAnimationDuration="400"
            app:rdv_zoomAnimationTrigger="onTap" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/games_list_item__RL_4"
                    android:layout_width="@dimen/game_image_back_height"
                    android:layout_height="@dimen/game_image_back_height"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/border_image"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/games_list_item__IV_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/game_image_height"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null" />

                    <LinearLayout
                        android:id="@+id/locked_overlay_ll_4"
                        android:layout_width="@dimen/game_image_back_height"
                        android:layout_height="@dimen/game_image_back_height"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_3"
                        android:alpha=".50"
                        android:background="@drawable/locked_item_transparent_bg"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@drawable/videos_categories_locked_icon" />

                        <com.appy.store.lite.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_1"
                            AppystoreLite:fontName="@string/font_name_passing_notes"
                            android:text="@string/locked_txt"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </RelativeLayout>

                <com.appy.store.lite.customviews.CustomTextView
                    android:id="@+id/games_title_TV4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    AppystoreLite:fontName="@string/font_name_passing_notes"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/h3" />
            </LinearLayout>
        </com.appy.store.lite.ripple.RippleDecoratorView>
    </LinearLayout>

    <com.appy.store.lite.ripple.RippleDecoratorView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        app:rdv_rippleAnimationDuration="800"
        app:rdv_rippleAnimationTrigger="onDown"
        app:rdv_rippleCentered="true"
        app:rdv_rippleColor="@android:color/holo_blue_dark"
        app:rdv_rippleRadius="40dp"
        app:rdv_rippleStyle="fill"
        app:rdv_zoomAnimation="true"
        app:rdv_zoomAnimationDuration="400"
        app:rdv_zoomAnimationTrigger="onTap" >

        <com.appy.store.lite.customviews.CustomButton
            android:id="@+id/games_item_see_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            AppystoreLite:fontName="@string/font_name_passing_notes"
            android:background="@drawable/ic_see_all_button"
            android:text="@string/parents_videos_see_all_btn_txt"
            android:textColor="@android:color/black"
            android:textSize="@dimen/h3"
            android:visibility="visible" />
    </com.appy.store.lite.ripple.RippleDecoratorView>

</LinearLayout>