<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:AppystoreLite="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg_otp_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_30"
        android:paddingTop="@dimen/dp_30">

        <com.appy.store.lite.customviews.CustomTextView
            android:id="@+id/txt_description_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_msg_txt1"
            android:textColor="@color/black"
            android:textSize="@dimen/h2"
            android:textStyle="bold"
            AppystoreLite:fontName="@string/font_name_passing_notes" />

        <com.appy.store.lite.customviews.CustomTextView
            android:id="@+id/txt_description_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/confirm_msg_txt2"
            android:textColor="@color/black"
            android:textSize="@dimen/h2"
            android:textStyle="bold"
            AppystoreLite:fontName="@string/font_name_passing_notes" />

        <com.appy.store.lite.customviews.CustomTextView
            android:id="@+id/tv_subscribe_now"
            android:layout_width="@dimen/rate_us_dialog_btn_width"
            android:layout_height="@dimen/rate_us_dialog_btn_height"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/btn_submit_with_shadow"
            android:gravity="center"
            android:text="@string/subscribe_now_btn_txt"
            android:textColor="@color/black"
            android:textSize="@dimen/h3"
            AppystoreLite:fontName="@string/font_name_passing_notes" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.appy.store.lite.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_subscribe_user_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/h3"
                android:textStyle="bold"
                AppystoreLite:fontName="@string/font_name_passing_notes" />

            <com.appy.store.lite.customviews.CustomTextView
                android:id="@+id/tv_tap_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/tap_here_txt"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/h3"
                android:textStyle="bold"
                AppystoreLite:fontName="@string/font_name_passing_notes" />
        </LinearLayout>

    </LinearLayout>

    <!--Cross Button-->
    <ImageButton
        android:id="@+id/ibtn_subscriptn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@null"
        android:src="@drawable/close_icon_dark" />

</RelativeLayout>